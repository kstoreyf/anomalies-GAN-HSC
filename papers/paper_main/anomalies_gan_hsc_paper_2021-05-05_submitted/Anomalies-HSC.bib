issn = {14320746},
journal = {Astronomy and Astrophysics},
keywords = {Galaxies: statistics,Galaxy: fundamental parameters,Infrared: galaxies,Infrared: stars,Stars: statistics},
title = {{Automated novelty detection in the WISE survey with one-class support vector machines}},
